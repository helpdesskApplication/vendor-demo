<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:gravity="center"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/imageViewCometchatLogo"
        android:layout_width="250dp"
        android:layout_height="120dp"
        android:layout_marginBottom="30dp"
        android:adjustViewBounds="true"
        android:maxHeight="@dimen/app_logo_height"
        android:maxWidth="@dimen/app_logo_width"
        android:src="@drawable/logo_login" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_guest_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Guest Name"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/colorAccent"
        android:gravity="center"
        >
        <EditText
            android:id="@+id/editTextGuestName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:theme="@style/TextLabel"
            android:inputType="textCapWords"
            android:maxWidth="250dp"
            android:minWidth="200dp"
            android:singleLine="true" />

    </android.support.design.widget.TextInputLayout>



    <Button
        android:id="@+id/buttonGuestLogin"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/circular_button_background"
        android:text="@string/login_button_text"
        android:textAllCaps="false"
        android:textColor="@color/color_white" />

    <ProgressBar
        android:id="@+id/progress_weel"
        android:visibility="gone"
        android:theme="@style/CircularProgress"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="match_parent"
        android:progressTint="@color/color_black"
        android:layout_below="@+id/buttonDemoLogin"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/imageViewBottomBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:tint="@color/colorPrimary"
        android:src="@drawable/ic_back_arrow" />

</LinearLayout>
